<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fe"
    android:clickable="true">

    <include
        android:id="@+id/inc_title"
        layout="@layout/title_view_img" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inc_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_10"
                android:gravity="center"
                android:minHeight="30dp"
                android:text="身份认证通过才能联系司机！请填写真实信息！"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="上传本人头像"
                android:textColor="@color/word_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_up_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/up_head" />

                <RelativeLayout
                    android:id="@+id/rlt_headex"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/up_head_demo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/trans_black"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="样例"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="上传清晰的身份证正面"
                android:textColor="@color/word_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="(勿遮挡证件头像)"
                android:textColor="@color/word_gray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_up_cardZ"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/up_drive" />

                <RelativeLayout
                    android:id="@+id/rlt_carZ"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/up_drivecard_demo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/trans_black"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="样例"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_cardZ"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_ef" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="上传清晰的身份证背面"
                android:textColor="@color/word_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_up_cardB"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/up_drive" />

                <RelativeLayout
                    android:id="@+id/rlt_carB"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/up_drivecard_demo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/trans_black"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="样例"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_cardB"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_ef" />

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blue_icon"
        android:gravity="center"
        android:minHeight="45dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>